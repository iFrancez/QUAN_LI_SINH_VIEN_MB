<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#646464"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="350dp"
    android:layout_height="190dp"

    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    tools:ignore="TextSizeCheck">

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Bạn muốn thêm môn học không ?\nKhông thể thay đổi tên môn học và mã học phần nếu đã thêm vào danh sách"
        android:textSize="22sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/bluesky"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"

            android:id="@+id/buttonYes"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background_yes_no"
            android:text="@string/c"
            style="?android:attr/buttonBarButtonStyle"></Button>

        <Button
            android:layout_marginStart="10dp"
            android:layout_width="150dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/bluesky"
            android:textStyle="bold"

            android:background="@drawable/round_background_yes_no"
            android:id="@+id/buttonNo"
            android:layout_height="wrap_content"
            android:text="@string/kh_ng"
            style="?android:attr/buttonBarButtonStyle"></Button>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
