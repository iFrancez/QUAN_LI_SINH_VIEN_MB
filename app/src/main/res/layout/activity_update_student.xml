<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAddSubject">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Cập nhật sinh viên"
        android:textColor="#F44336"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/EditTextUpdateStudentName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Cập nhật họ tên học sinh"></EditText>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Cập nhật giới tính: "
        android:textColor="#000000"
        android:textSize="20sp"></TextView>

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <RadioButton
            android:id="@+id/radiobuttonUpdateMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="48dp"
            android:text="Nam"
            android:textColor="#000000"></RadioButton>

        <RadioButton
            android:id="@+id/radiobuttonUpdateFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:minHeight="48dp"
            android:text="Nữ"
            android:textColor="#000000"></RadioButton>
    </RadioGroup>

    <EditText
        android:id="@+id/EditTextUpdateStudentCode"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Cập nhật mã số sinh viên"
        android:enabled="true"
        android:focusable="false"></EditText>

    <EditText
        android:id="@+id/EditTextUpdateStudentBirth"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Cập nhập ngày sinh"
        android:inputType="datetime"></EditText>

    <Button

        android:id="@+id/buttonUpdateStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Cập nhật"></Button>
</LinearLayout>