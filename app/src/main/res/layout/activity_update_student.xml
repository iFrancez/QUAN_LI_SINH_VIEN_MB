<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAddSubject">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Cập nhật sinh viên"
        android:textColor="#F44336"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/EditTextUpdateStudentName"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="Cập nhật họ tên học sinh"></EditText>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Cập nhật giới tính: "
        android:textColor="#000000"
        android:textSize="17sp"></TextView>

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <RadioButton
            android:id="@+id/radiobuttonUpdateMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="40dp"
            android:text="Nam"
            android:textColor="#000000"></RadioButton>

        <RadioButton
            android:id="@+id/radiobuttonUpdateFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:minHeight="40dp"
            android:text="Nữ"
            android:textColor="#000000"></RadioButton>
    </RadioGroup>

    <EditText
        android:id="@+id/EditTextUpdateStudentCode"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:enabled="true"
        android:focusable="false"
        android:hint="Cập nhật mã số sinh viên"></EditText>

    <EditText
        android:id="@+id/EditTextUpdateStudentBirth"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="Cập nhập ngày sinh"
        android:inputType="datetime"></EditText>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Cập nhật điểm quá trình (20%): "
        android:textColor="#000000"
        android:textSize="17sp"></TextView>
    <EditText
        android:id="@+id/EditTextUpdateStudentProcessPoint"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:hint="Điểm quá trình 20%" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Cập nhật điểm giữa kì (30%): "
        android:textColor="#000000"
        android:textSize="17sp"></TextView>
    <EditText
        android:id="@+id/EditTextUpdateStudentMiddlePoint"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:hint="Điểm giữa kì 30%" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Cập nhật điểm cuối kì (50%): "
        android:textColor="#000000"
        android:textSize="17sp"></TextView>
    <EditText
        android:id="@+id/EditTextUpdateStudentFinalPoint"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:hint="Điểm cuối kì 50%" />

    <Button
        android:id="@+id/buttonUpdateStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Cập nhật"></Button>
</LinearLayout>