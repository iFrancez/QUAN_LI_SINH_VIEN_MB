<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAddClass">
    <TextView
        android:layout_marginTop="15dp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Thêm lớp học"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <EditText
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextClassName"
        android:hint="Tên lớp"
        android:layout_width="300dp"
        android:drawableEnd="@drawable/baseline_class_24"
        android:layout_height="60dp"></EditText>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextClassCode"
        android:hint="Mã lớp"
        android:drawableEnd="@drawable/baseline_code_24"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextTeacherName"
        android:hint="Họ tên giảng viên"
        android:drawableEnd="@drawable/baseline_drive_file_rename_outline_24"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>


    <TextView
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Giới tính: "
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"></TextView>
    <RadioGroup
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="45dp">

        <RadioButton
            android:id="@+id/radiobuttonMaleTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="48dp"
            android:text="Nam"
            android:textColor="#000000"></RadioButton>

        <RadioButton
            android:id="@+id/radiobuttonFemaleTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:minHeight="48dp"
            android:text="Nữ"
            android:textColor="#000000"></RadioButton>
    </RadioGroup>

    <EditText
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextTeacherCode"
        android:hint="Mã giảng viên"
        android:layout_width="300dp"
        android:drawableEnd="@drawable/baseline_code_24"
        android:layout_height="60dp"></EditText>

    <EditText
        android:inputType="datetime"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextTeacherBirth"
        android:hint="Ngày sinh"
        android:drawableEnd="@drawable/baseline_calendar_month_24"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>
    <Button
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Thêm lớp học"
        android:textColor="@color/white"
        android:id="@+id/buttonAddClass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_2"></Button>
</LinearLayout>