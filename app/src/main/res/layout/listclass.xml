<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/TextViewClassTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lớp học"
            android:textColor="#FFFFFF"
            android:textSize="25sp">

        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="Mã lớp: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/TextViewCodeClass"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/classinformation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/baseline_subject_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ImageButton
        android:layout_marginLeft="5dp"
        android:id="@+id/classupdate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/baseline_update_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ImageButton
        android:layout_marginLeft="5dp"
        android:id="@+id/classdelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/baseline_delete_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>
</LinearLayout>