<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#B1CBD3"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="ĐĂNG KÍ"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape_edittext"
        android:drawableRight="@drawable/baseline_supervised_user_circle_24"
        android:hint="Tên tài khoản"

        android:paddingLeft="16dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="20dp"

        android:background="@drawable/shape_edittext"
        android:drawableRight="@drawable/baseline_visibility_24"
        android:hint="*******"
        android:paddingLeft="16dp" />

    <EditText
        android:id="@+id/Repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edittext"

        android:drawableRight="@drawable/baseline_visibility_24"
        android:hint="*******"
        android:paddingLeft="16dp" />


    <EditText
        android:id="@+id/edit_text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Repassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edittext"
        android:drawableRight="@drawable/baseline_calendar_month_24"
        android:hint="Ngày sinh"
        android:paddingLeft="16dp" />


    <EditText
        android:id="@+id/number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_date"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edittext"
        android:drawableRight="@drawable/baseline_local_phone_24"

        android:hint="Số điện thoại"
        android:inputType="number"
        android:paddingLeft="16dp" />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="331dp"
        android:layout_height="60dp"
        android:layout_below="@+id/number2"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        android:text="Đăng kí"
        android:textColor="#212121"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />



</RelativeLayout>