<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityClass">

    <androidx.appcompat.widget.Toolbar
        app:title="Lớp học"
        android:id="@+id/toolbarClass"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <EditText
        android:id="@+id/editTextSearchClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tìm kiếm mã lớp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonEnterSearchClass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm" />
        <Button
            android:id="@+id/buttonRefreshClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật lại" />
    </LinearLayout>
    <ListView
        android:id="@+id/listviewClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>