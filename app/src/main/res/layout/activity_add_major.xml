<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAddMajor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="Thêm ngành học"
        android:textColor="@color/blue"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/EditTextMajorTitle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Tên ngành học"
        android:drawableEnd="@drawable/baseline_drive_file_rename_outline_24"
        ></EditText>

    <EditText
        android:id="@+id/EditTextMajorCode"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Mã khoa"
        android:drawableEnd="@drawable/baseline_code_24"
        ></EditText>

    <EditText
        android:id="@+id/EditTextMajorSchool"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Trường học"
        android:drawableEnd="@drawable/baseline_school_24"
        ></EditText>



    <Button
        android:id="@+id/buttonAddMajor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/background_button_2"
        android:text="Thêm ngành học"></Button>
</LinearLayout>