<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingBottom="15dp"
        android:paddingRight="5dp">

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/TextViewStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên học sinh"
            android:textSize="25sp"></TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="MSSV: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/TextViewStudentCode"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/studentinformation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/baseline_subject_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ImageButton
        android:layout_marginLeft="5dp"
        android:id="@+id/studentupdate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/baseline_update_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ImageButton
        android:layout_marginLeft="5dp"
        android:id="@+id/studentdelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/baseline_delete_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>
</LinearLayout>